@require '../../styles/palette.styl';

.menu-container
  max-height 180px
  overflow-y auto
  padding 3px

.menu-title
  position relative
  display flex
  align-items center
  justify-content center
  height 36px
  color color-grey-30
  border-bottom 1px solid color-grey-80

.back-icon
  position absolute
  left 7px
  cursor pointer
  font-size 13px
  color color-grey-60

.menu-item
  display inline-flex
  width 45px
  height 35px
  margin 5px
  justify-content center
  align-items center
  cursor pointer
  border-radius 2px
  user-select none
  &.active-menu-item
    background-color color-primary
    color white
    &:hover
      background-color color-primary
      color white
  &:hover
    background-color color-grey-98

.all
  position absolute
  right 15px
  font-size 12px
  line-height 1
  border 1px solid color-grey-80
  padding 4px 6px
  color color-grey-60
  border-radius 2px
  cursor pointer
  &.active-all
    border none
    background-color color-primary
    color white
    &:hover
      background-color color-primary
      color white
  &:hover
    background-color color-grey-98
